<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/history_time"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:gravity="center"
        android:text="2019-10-02 12:45:26"
        android:textColor="@color/text_gray"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/history_content"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:background="@color/white"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="历史记录"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_toStartOf="@+id/history_time"
        android:layout_toLeftOf="@+id/history_time"
        android:text="修改时间：" />
</RelativeLayout>