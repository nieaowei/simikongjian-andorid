<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginTop="15dp"
    android:background="#00000000"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <!--<ImageView
        android:id="@+id/book_item_image"
        android:layout_width="49dp"
        android:layout_height="match_parent" />-->
    <TextView
        android:id="@+id/my_friends_shares_name"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="分享的人"
        android:textColor="@color/bpBlue"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/my_friends_shares_dt"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="28dp"
        android:gravity="center"
        android:text="2019-10-02 12:45:26"
        android:textColor="@color/text_gray"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/my_friends_shares_nr"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/my_friends_shares_name"
        android:layout_marginTop="0dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="分享的内容"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/share_img"
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layout_below="@+id/my_friends_shares_nr"
        android:layout_marginTop="4dp"
        android:background="#FFFFFF"
        app:srcCompat="@drawable/bg_ripple" />

</RelativeLayout>